extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)

  h1(class="mb-4") Thêm mới voucher
  form(
    action=`${prefixAdmin}/vouchers/create`
    id="form-create-voucher"
    method="POST"
    enctype="application/x-www-form-urlencoded"
  )
    div(class="form-group")
      label(for="code") Mã 
      input(
        type="text"
        class="form-control"
        id="code"
        name="code"
        required
      )
    div(class="form-group")
      label(for="discountValue") Giá trị giảm giá:
      input(
        type="number"
        class="form-control"
        id="discountValue"
        name="discountValue"
        required
        value="0"
        min="0"
      )
    div(class="form-group")
      label(for="expirationDate") Ngày hết hạn:
      input(
        type="date" 
        class="form-control"
        id="expirationDate" 
        name="expirationDate" 
        required
      )
    div(class="form-group")
      label(for="usageLimit") Giới hạn số lần sử dụng:
      input(
        type="number" 
        id="usageLimit" 
        class="form-control"
        name="usageLimit" 
        value="1"
      )
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Tạo mới
    