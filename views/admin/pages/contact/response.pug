extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 

  +alert-success(5000)
  +alert-error(5000)
  h1(class="mb-4") #{pageTitle}
 
  form(
    action=`${prefixAdmin}/contact/response/${contact.id}`
    id="form-create-voucher"
    method="POST"
  )
    div(class="form-group")
      label(for="fullName") Họ tên 
      input(
        type="text"
        class="form-control"
        id="fullName"
        name="fullName"
        value=contact.fullName
        required
      )
    div(class="form-group")
      label(for="email") Gửi đến mail:
      input(
        type="email"
        class="form-control"
        id="email"
        name="email"
        value=contact.email
        required
      )

    div(class="form-group")
      label(for="subject") Chủ đề:
      input(
        type="text"
        class="form-control"
        id="subject"
        name="subject"
        required
      )
    div(class="form-group")
      label(for="message") Nội dung:
      textarea(
        class="form-control textarea-mce"
        id="message"
        name="message"
        rows="5"
      )

    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary "
      ) Gửi 

      a(
        href=`${prefixAdmin}/contact`
        class="btn btn-danger mx-2  "
      ) Quay lại 



  

