extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
  if(role.permissions.includes("rooms-facility_create"))

    h1(class="mb-4") Thêm mới cơ sở vật chất
    +alert-error(5000)
    form(
      action=`${prefixAdmin}/rooms-features/create`
      id="form-create-room-features"
      method="POST"
    )
      div(class="form-group")
        label(for="title") Tên 
        input(
          type="text"
          class="form-control"
          id="title"
          name="title"
          required
        )
      div(class="form-group")
        label(for="desc") Mô tả
        textarea(
          class="form-control textarea-mce"
          id="desc"
          name="description"
          rows="5"
        )
      
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary"
        ) Tạo mới

      script(src="/admin/js/room-facility.js")